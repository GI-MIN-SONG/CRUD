<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.tje.model.BoardMapper">

	<!-- 게시판 추가하기  -->
	<insert id="insertBoard">
		insert into board (b_title,b_writer,b_detail,b_date)
		 values (#{b_title},#{b_writer},#{b_detail},SysDate())
	</insert>
<!-- 	
	게시글 전체 목록 조회 및 검색조회
	<select id="listAll" resultType="board">
	
	목록 조회 및 페이징 전체 쿼리
		<include refid="pagingHeader"></include>
			select rownum, b_no, b_title, b_detail, b_date, b_count, b_writer as userName
			from board b, member m
			<include refid="search"></include>
			order by b_no desc, b_date desc
			<include refid="pagingFooter"></include>
	</select>
	 -->
	<!-- 게시판 상세보기  -->

	<select id="detailBoard" resultType="board">
		select * from board
		where b_no = #{b_no}
	</select>
	
	<!-- 게시판 삭제하기  -->
	
	<delete id="deleteBoard">
		delete from board
		where b_no =#{b_no}
	</delete>
	
	<!-- 게시판 수정하기  -->
	<update id="updateBoard">
		update board set
		b_title= #{b_title},
		b_detail = #{b_detail},
		b_writer = #{b_writer}
		where b_no = #{b_no}
	</update>
	
	<!-- 게시글 조회수 증가 처리  -->
	<update id="increaseViewcnt">
		UPDATE board set b_count = b_count +1
		where b_no = #{b_no}
	</update>
	
	
	<!-- 게시글  -->
</mapper>